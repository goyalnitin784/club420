<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="corePropertyManager" class="com.phantom.prop.service.ChainedAppPropertyManager">
        <constructor-arg index="0" >
            <list>
                <ref bean="centralPropertyChain"/>
            </list>
        </constructor-arg>
    </bean>


    <bean name="centralPropertyChain" class="com.phantom.prop.service.ChainedAppPropertyManager">
        <constructor-arg index="0" >
            <list>
                <ref bean="applicationPropertyManager" />
                <ref bean="interfacePropertyManager"/>
                <ref bean="threadPoolPropertyManager"/>
                <ref bean="databasePropertyManager"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="applicationPropertyManager" class="com.phantom.prop.service.ReloadableApplicationPropertyManager">
        <constructor-arg index="0" value="properties/${environment}/AppProperties.properties"/>
    </bean>

    <bean name="interfacePropertyManager" class="com.phantom.prop.service.ReloadableApplicationPropertyManager">
        <constructor-arg index="0" value="properties/${environment}/interface.properties"/>
    </bean>

    <bean name="threadPoolPropertyManager" class="com.phantom.prop.service.ReloadableApplicationPropertyManager">
        <constructor-arg index="0" value="properties/${environment}/threadPool.properties"/>
    </bean>

    <bean name="databasePropertyManager" class="com.phantom.prop.service.ReloadableApplicationPropertyManager">
        <constructor-arg index="0" value="properties/${environment}/database.properties"/>
    </bean>

</beans>